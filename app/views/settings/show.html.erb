<% breadcrumb :setting %>
<% set_meta_tags title: t(".title") %>
<div class="container" id="setting-show">
  <h2 class="mt-3"><p id="title"><i class="bi bi-gear me-1"></i><%= t(".title") %></p></h2>
  <% if user_signed_in? %>
    <div class="row">
      <div class="col-md-6 offset-md-2 p-5 rounded" id="user-info">
        <div class="d-flex justify-content-center mb-3">
          <h3><%= t(".user_info") %></h3>
          <div class="d-flex justify-content-center ms-5" id="edit_btn_area">
            <%= link_to edit_user_registration_path, class: "btn", id: "edit_btn" do %><i class="bi bi-pencil-square me-2"></i><%= t("default.edit") %><% end %>
          </div>
        </div>  
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th scope="row"><h5><%= t("helpers.label.fullname") %></h5></th>
                <td><%= @user.decorate.fullname %></td>
              </tr>
              <tr>
                <th scope="row"><h5><%= t("helpers.label.email") %></h5></th>
                <td><%= @user.email %></td>
              </tr>
            <tbody>  
          </table>    
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 offset-md-2 mt-5 ps-4 rounded" id="terms_of_rule">
      <div class="d-flex flex-column">
        <%= link_to agreement_path, class: "mt-3" do %><i class="bi bi-file-text me-1"></i><%= t(".term_of_service") %><% end %>
        <%= link_to plivacy_policy_path, class: "mt-3" do %><i class="bi bi-file-earmark-lock me-1"></i><%= t(".term_of_privacy") %><% end %>
        <%= link_to new_contact_path, class: "my-3" do %><i class="bi bi-envelope me-1"></i><%= t(".contact") %><% end %>
      </div>
    </div>
  </div>
</div>