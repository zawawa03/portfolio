<%= form_with url: search_boards_path, scope: :q, method: :get, locals: true do |f| %>
  <div class="input-group">
    <div class="w-75">
      <%= f.text_field :word, class: "form-control", placeholder: "タイトル、ゲーム名" %>
    </div>  
    <div class="d-flex mt-2">
      <%= f.select :tag_id, @board_tag_options.map { |tag| [tag.name, tag.id] }, { include_blank: t(".tag_blank") },class: "form-select" %>  
      <div class="d-flex justify-content-center ms-2" id="search_btn_area">
        <%= f.submit t(".search"), class: "btn", id: "search_btn" %>
      </div>
    </div>
  </div>   
<% end %>