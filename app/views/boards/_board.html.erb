<div class="card my-3">
  <div class="row g-0">
    <div class="col-md-3">
      <%= image_tag board.game.decorate.board_image(150, 128), class: "rounded-start" %>
    </div>
    <div class="col-md-7 offset-sm-2 offset-lg-0">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title">
            <%= link_to board_path(board), class: "link-body-emphasis" do %><%= board.title %><% end %>
          </h5>
          <% if board.creator == current_user %>
            <%= link_to t("default.delete"), board_path(board), class: "btn btn-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: t(".confirm") } %>
          <% end %>
        </div>  
        <p class="card-text"><%= board.game.name %></p>
        <div class="wrap d-flex">
          <% board.tags.each do |tag| %>
            <span class="me-1">#<%= tag.name %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>