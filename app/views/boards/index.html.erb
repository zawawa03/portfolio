<% breadcrumb :board_index %>
<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 my-3">
      <div class="d-flex justify-content-center" id="board_index_page">
        <h2 class="me-3 mt-3"><%= t(".title") %></h2>
        <div class="d-flex justify-content-center mt-3 ms-3" id="bg_success_btn_area">
          <%= link_to new_board_path, class: "btn pt-2", id: "bg_success_btn" do %><i class="bi bi-pencil me-1"></i><%= t(".new_board") %><% end %>
        </div>  
      </div>
    </div>
    <div class="col-md-3">
      <%= render 'search_form' %>
    </div>
  </div> 
  <div class="row">
    <div class="col-md-8 offset-md-1 my-3">
      <div class="mt-3" id="board_index_card">
        <%= render partial: 'board', collection: @boards %>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @boards, window: 3, theme: "bootstrap-5" %>  
      </div>
    </div>
  </div>
</div>