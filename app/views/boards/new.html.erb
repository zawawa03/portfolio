<% breadcrumb :board_new %>
<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-2">
      <h2><%= t(".title") %></h2>
      <%= form_with model: @board, locals: true do |f| %>
        <%= render partial: 'shared/error_message', locals: { object: @board } %>
        <div class="mt-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :game_id, class: "form-label" %>
          <%= f.select :game_id, @game_options, { prompt: t(".not_select") }, class: "form-select" %>
        </div>
        <div class="mt-3">
          <div class="mb-3"><label><%= t(".tag_label") %></label></div>
          <%= f.collection_check_boxes :tag_ids, @board_tag_options, :id, :name do |b| %>
            <%= b.check_box class: "form-check-input" %>
            <%= b.label class: "form-check-label me-3" %>
          <% end %>
        </div>
        <%= f.submit t(".create"), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>