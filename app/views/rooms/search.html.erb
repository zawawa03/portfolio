<div class="container" id="room-index">
  <div class="row">
    <div class="col-md-3 offset-md-2 my-3 d-flex">
      <h2 class="mt-3 me-3"><%= t(".title") %></h2>
      <%= link_to t(".create"), new_room_path, class: "btn btn-secondary btn-lg mt-3 ms-3", id: "create-btn" %>
    </div>
    <div class="col-md-5 offset-md-2 mt-2">
      <%= render "search_field" %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-10 offset-md-1" id="rectuit-area">
      <div class="d-flex flex-wrap">
        <% @rooms.each do |room| %>
          <%= render partial: 'recruit_card', locals: { room: room } %>
        <% end %>
      </div>
    </div>
  </div>
</div>