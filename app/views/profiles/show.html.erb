<% breadcrumb :profile_show, @profile %>
<% set_meta_tags title: t(".title") %>
<div class="container" id="profile-show-page">
  <% if @friend.present? && @friend.blocked? %>
    <div class="row">
      <div class="col-md-6 offset-md-2">
        <h5><%= t(".not_introduction") %></h5>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-6 offset-2 p-4 mt-5 rounded" id="status-area">
        <div class="d-flex justify-content-center">
          <h2><%= t(".title") %></h2>
          <% if @profile.user == current_user %>
            <div class="d-flex justify-content-center ms-5" id="edit_btn_area">
              <%= link_to edit_profile_path, class: "btn", id: "edit_btn" do %><i class="bi bi-pencil-square me-2"></i><%= t("default.edit") %><% end %>
            </div>
          <% end %>  
        </div>  
        <div class="d-flex mt-3" id="profile-box">
          <%= image_tag @profile.decorate.avatar_image(100, 100), class: "rounded-circle", id: "profile-avatar" %>
          <div class="d-flex flex-column ms-3 mt-3">
            <h3 id="profile-name"><%= @profile.nickname %></h3>
            <h6 id="profile-sex">
              <% if @profile.male? %>
                <i class="bi bi-gender-male me-2"></i><%= @profile.decorate.profile_sex %>
              <% elsif @profile.female? %>
                <i class="bi bi-gender-female me-2"></i><%= @profile.decorate.profile_sex %>
              <% else %>
                <%= @profile.decorate.profile_sex %>
              <% end %>    
            </h6>
          </div>  
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 offset-md-2 mt-5 p-4 rounded" id="intro-area">
        <h3 class="d-flex justify-content-center"><%= t(".introduction") %></h3>
        <div class="text-wrap mt-3">
          <span><%= simple_format(@profile.introduction) %></span>
        </div>  
      </div>
    </div>
  <% end %>    
</div>