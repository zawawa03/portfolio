<nav class="navbar navbar-expand-lg" id="header-nav">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">gamer room</a>
    <div class="navbar-nav">
      <%= link_to notifications_path, class: "mt-3 me-3" do %>
        <i class="bi bi-bell position-relative" style="font-size: 2rem"></i>
        <div class="position-absolute top-25 start-75 translate-middle badge rounded-pill bg-danger"><%= "#{@notifications_count}" %></div>
      <% end %>
      <% if current_user.profile.present? %>
        <%= link_to user_profile_path(current_user), class: "icon-link icon-link-hover nav-link me-3 mt-2 d-flex" do %>
          <div class="me-2">
            <%= image_tag current_user.profile.decorate.avatar_image(50, 50), class: "rounded-circle", id: "header-avatar" %>
          </div>
          <div class="align-self-center"><%= current_user.profile.nickname %></div>
        <% end %>
      <% end %>  
      <%= link_to setting_path, class: "nav-link me-3 mt-2" do %><i class="bi bi-gear" style="font-size: 2rem"></i><% end %>
    </div>
  </div>
</nav>