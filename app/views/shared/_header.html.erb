<nav class="navbar navbar-expand-lg" id="header-nav">
  <div class="container-fluid">
    <a href="/" class="ms-3"><%= image_tag '1.png', size:"230x90" %></a>
    <div class="navbar-nav mt-3 me-5">
      <div class="me-3" id="notification_user" data-id="<%= current_user.id %>">
        <div id="notification_field">
          <%= link_to notifications_path do %>
            <i class="bi bi-bell position-relative"></i>
            <div class="position-absolute top-25 start-75 translate-middle badge rounded-pill text-bg-secondary"><%= "#{@notifications_count}" %></div>
          <% end %>
        </div>  
      </div>  
      <% if current_user.profile.present? %>
        <%= link_to user_profile_path(current_user), class: "mx-4 mb-2" do %>
          <%= image_tag current_user.profile.decorate.avatar_image(40, 40), class: "rounded-circle", id: "header-avatar" %>
        <% end %>
      <% end %>  
      <%= link_to setting_path do %><i class="bi bi-gear"></i><% end %>
    </div>
  </div>
</nav>