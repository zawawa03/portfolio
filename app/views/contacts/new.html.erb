<% breadcrumb :new_contact %>
<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-6 offset-2 mt-5 p-4 rounded" id="contact_form">
      <h3 class="d-flex justify-content-center my-3"><%= t(".title") %></h3>
      <%= form_with model: @contact, url: contact_path, method: :get, locals: true do |f| %>
        <%= render partial: 'shared/error_message', locals: { object: @contact } %>
        <div class="mt-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, sutocomplete: "name",class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :body, class: "form-label" %>
          <%= f.text_area :body, class: "form-control", placeholder: "1000文字以内で入力してください", rows: 10 %>
        </div>
        <div class="d-flex justify-content-center mt-5 mb-3" id="session_btn_area">
          <%= f.submit t(".submit"), id: "session_btn" %>
        </div>
      <% end %>
    </div>
  </div> 
</div>