<% breadcrumb :new_contact %>
<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 mt-3">
      <h2><%= t(".title") %></h2>
      <%= form_with model: @contact, url: contact_path, method: :get, locals: true do |f| %>
        <%= render partial: 'shared/error_message', locals: { object: @contact } %>
        <div class="mt-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, sutocomplete: "name",class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :body, class: "form-label" %>
          <%= f.text_area :body, class: "form-control", placeholder: "1000文字以内で入力してください", rows: 10 %>
        </div>
        <%= f.submit t('.submit'), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div> 
</div>