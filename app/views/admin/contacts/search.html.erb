<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row my-4">
    <div class="col-md-4">
      <h1><%= t(".title") %></h1>
    </div>
    <div class="col-md-3">
      <%= render "search_form" %>
    </div>
  </div>  
  <div class="row">  
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= Contact.human_attribute_name(:id) %></th>
            <th scope="col"><%= Contact.human_attribute_name(:name) %></th>
            <th scope="col"><%= Contact.human_attribute_name(:email) %></th>
            <th scope="col"><%= Contact.human_attribute_name(:created_at) %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'contact', collection: @contacts %>
        </tbody>
      </table>
    </div>
  </div>
</div>