<div class='container' id="admin-tag-page">
  <div class='row my-4'>
    <div class='col-md-4'>
      <h1><%= t(".title") %></h1>
    </div>   
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <table class="table">
        <thead>
         <tr>
          <th scope="col"><%= Tag.human_attribute_name(:id) %></th>
          <th scope="col"><%= Tag.human_attribute_name(:category) %></th>
          <th scope="col"><%= Tag.human_attribute_name(:name) %></th>
          <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
          <%= render partial: 'tag', collection: @tags %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 offset-md-1 rounded p-4" id="tag-form">
      <h4><%= t(".add_tag") %></h4>
      <%= form_with model: @tag, url: admin_tags_path, method: :post ,locals: true do |f| %>
        <%= render partial: "shared/error_message", locals: { object: @tag } %>
        <div class="mt-3">
          <%= f.label :category, class: "form-label" %>
          <%= f.select :category, Tag.categories.keys.map{ |k| [t("enums.tag.category.#{k}"), k] }, { prompt: t(".select") }, class: "form-select" %>
        </div>
        <div class="mt-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <%= f.submit t("helpers.submit.create"), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>