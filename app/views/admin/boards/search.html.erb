<% set_meta_tags title: t(".title") %>
<div class='container'>
  <div class='row my-4'>
    <div class='col-md-4'>
      <h1><%= t(".title") %></h1>
    </div>
    <div class="col-md-3">
      <%= render "search_form" %>
    </div>  
  </div>
  <div class='row'>
    <div class='col-md-10'>
      <table class="table">
        <thead>
         <tr>
          <th scope="col"><%= Board.human_attribute_name(:id) %></th>
          <th scope="col"><%= Board.human_attribute_name(:title) %></th>
          <th scope="col">creator_id</th>
          <th scope="col"><%= Board.human_attribute_name(:creator) %></th>
          <th scope="col"><%= Board.human_attribute_name(:game) %></th>
          <th scope="col"><%= Board.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
          <%= render partial: 'board', collection: @boards %>
        </tbody>
      </table>
    </div>
  </div>
</div>