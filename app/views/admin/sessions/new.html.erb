<% set_meta_tags title: t(".title") %>
<div class="container" id="admin_login_form">
  <div class="row">
    <div class="col col-md-4 offset-md-4  p-5 mt-5">
      <h4><%= t('.title') %></h4>
      <%= form_with model: @user, url: admin_login_path, method: :post, local: true do |f| %>
        <%= render partial: 'admin/shared/error_messages', locals: { object: @user } %>
        <div class="mt-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit t('.submit'), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>