<tr>
  <td><%= user.id %></td>
  <td><%= user.decorate.fullname %></td>
  <td><%= user.decorate.role_status %></td>
  <td><%= user.email %></td>
  <td><%= link_to t('default.show'), admin_user_path(user), class: 'btn btn-primary' %></td>
  <td><%= link_to t('default.edit'), admin_user_edit_path(user), class: 'btn btn-success' %></td>
  <td><%= button_to t('default.delete'), admin_user_destroy_path(user), method: :delete, class: 'btn btn-danger' %></td>
</tr>