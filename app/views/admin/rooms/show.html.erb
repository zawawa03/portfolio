<% set_meta_tags title: t(".title") %>
<div class="container" id="admin-room-show">
  <div class="row p-5">
    <div class="col-md-4 mt-3">
      <h3><%= t(".title") %></h3>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row"><%= Room.human_attribute_name(:id) %></th>
            <td><%= @room.id %></td>
          </tr>
          <tr>
            <th scope="row"><%= Room.human_attribute_name(:title) %></th>
            <td><%= @room.title %></td>
          </tr>
          <tr>
            <th scope="row">Creator_id</th>
            <td><%= @room.creator.id %></td>
          </tr>
          <tr>
            <th scope="row"><%= Room.human_attribute_name(:creator) %></th>
            <td><%= @room.creator.decorate.fullname %> ( <%= @room.creator.profile.nickname %> )</td>
          </tr>
          <tr>
            <th scope="row"><%= Room.human_attribute_name(:game_id) %></th>
            <td><%= @room.game.name %></td>
          </tr>
          <tr>
            <th scope="row"><%= t("activerecord.models.tag") %></th>
            <td class="d-flex flex-wrap">
              <% @room.tags.each do |tag| %>
                <p class="me-2"><%= tag.name %></p>
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row"><%= Room.human_attribute_name(:people) %></th>
            <td><%= @room.people %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to t('default.delete'), admin_room_path(@room), data: { turbo_method: :delete, turbo_confirm: t("admin.helpers.destroy") }, class: 'btn btn-danger' %>
      </div>
    </div>
    <div class="col-md-4 ms-3 mt-3">
      <h4><%= t(".join") %></h4>
      <% @users.each do |user| %>
        <div class="d-flex mt-2">
          <%= image_tag user.profile.decorate.avatar_image(50,50), class: "rounded-circle", id: "admin-avatar" %>
          <span class="align-self-center ms-1"><%= user.decorate.fullname %> ( <%= user.profile.nickname %> )</span>
        </div>
      <% end %>  
    </div>
  </div>
</div>    