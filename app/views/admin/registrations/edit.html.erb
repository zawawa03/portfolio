<% set_meta_tags title: t(".title") %>
<div class="container" id="admin-registration">
  <div class="row">
    <div class="col-md-8 mt-3">
      <h2><%= t(".title") %></h2>
      <%= form_with model: @user, url: admin_user_update_path, method: :put, multipart: true, locals: true do |f| %>
        <%= render partial: 'admin/shared/error_messages', locals: { object: @user } %>
          <div class="mt-3">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control", value: "#{@user.last_name}" %>
          </div>
          <div class="mt-3">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", value: "#{@user.first_name}" %>
          </div>
          <div class="mt-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", value: "#{@user.email}" %>
          </div>
          <div class="mt-3">
            <%= f.label :role, class: "form-label" %>
            <%= f.select :role, User.roles.keys.map{ |k| [t("enums.user.role.#{k}"), k]}, class: "form-control" %>
          </div>
          <%= f.submit t('helpers.submit.update'), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
