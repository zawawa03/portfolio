<div class="container" id="admin-game-page">
  <div class="row my-4">
    <div class="col-md-4">
      <h2><%= t(".title") %></h2>
    </div>   
  </div>
  <div class="row">
    <div class="col-md-6">
      <table class="table">
        <thead>
         <tr>
          <th scope="col"><%= Game.human_attribute_name(:id) %></th>
          <th scope="col"><%= Game.human_attribute_name(:name) %></th>
          <th scope="col"><%= Game.human_attribute_name(:picture) %></th>
          <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
          <%= render partial: 'game', collection: @games %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4 offset-md-1 rounded p-4" id="add-game-form">
      <h4><%= t(".add_game") %></h4>
      <%= form_with model: @game, url: admin_games_path, mehtod: :post, locals: true do |f| %>
        <%= render partial: 'shared/error_message', locals: { object: @game } %>
        <div class="mt-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mt-3">
          <%= f.label :picture, class: "form-label" %>
          <%= f.file_field :picture, class: "form-control" %>
        </div>
        <%= f.submit t("helpers.submit.create"), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>