<% breadcrumb :user_edit %>
<% set_meta_tags title: t(".title") %>
<div class="container">
  <div class="row">
    <div class="col-4 offset-3 mt-5 p-4 rounded" id="user-edit-form">
      <h3 class="d-flex justify-content-center my-3"><%= t(".title") %></h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", autocomplete: "last_name", autofocus: true %> 
        </div>
        <div class="mt-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", autocomplete: "first_name" %>
        </div>
        <div class="mt-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", aotocomplete: true %>
        </div>
        <div class="d-flex justify-content-center mb-3 mt-5" id="session_btn_area">
          <%= f.submit t("helpers.submit.update"), id: "session_btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
  
