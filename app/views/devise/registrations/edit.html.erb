<div class="container" id="user-edit-form">
  <div class="row">
    <div class="col-md-8 offset-md-2 p-3">
      <h2><%= t(".title") %></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mt-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control", autocomplete: "last_name", autofocus: true %> 
        </div>
        <div class="mt-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control", autocomplete: "first_name" %>
        </div>
        <div class="mt-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", aotocomplete: true %>
        </div>
        <%= f.submit t("helpers.submit.update"), class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
  
