<% breadcrumb :user_login %>
<% set_meta_tags title: t(".sign_in") %>
<div class="container">
  <div class="row">
    <div class="col-4 offset-3 mt-5 p-4 rounded" id="session-form">
      <h3 class="my-3 d-flex justify-content-center"><%= t('.sign_in') %></h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field my-3">
          <%= f.label :email, class: "form-label ms-2" %>
          <%= f.email_field :email, class: "form-control", autofocus: true ,autocomplete: "email" %>
        </div>
        <div class="field my-3">
          <%= f.label :password, class: "form-label ms-2" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="d-flex justify-content-center" id="session_btn_area">
          <%= f.submit t('.submit'), id: "session_btn" %>
        </div>  
      <% end %>
      
      <div class="mt-3 mb-5">
        <div class="d-flex justify-content-center mb-2" id="to_registration_btn_area">
          <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "btn pt-2" ,id: "to_registration_btn" %>
        </div>
      </div>
      <div class="d-flex flex-column my-3"> 
        <%= button_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "gsi-material-button mb-3" do %>
          <div class="gsi-material-button-state"></div>
          <div class="gsi-material-button-content-wrapper">
            <div class="gsi-material-button-icon">
              <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                <path fill="none" d="M0 0h48v48H0z"></path>
              </svg>
            </div>
            <span class="gsi-material-button-contents">Googleでログイン</span>
            <span style="display: none;">Googleでログイン</span>
          </div> 
        <% end %>
        <%= link_to t('.forget_password'), new_user_password_path %>
      </div>  
    </div>
  <div>
</div>